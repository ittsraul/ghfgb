{% extends 'layout.html.twig' %}

{% block content %}
<div class="row justify-content-around">
    <form method="post" class="col-lg-8 loginForm row justify-content-center mb-5">
        {% if error %}
            <div class="alert alert-danger">{{ error.messageKey|trans(error.messageData, 'security') }}</div>
        {% endif %}

        {% if app.user %}
            <div class="mb-3 mt-3">
                Estás dado de alta como: {{ app.user.userIdentifier }} <a href="{{ path('app_logout') }}" class="btn btn-primary">Cerrar Sesión</a>
            </div>
        {% endif %}

        <h1 class="h3 mb-3 font-weight-normal">Iniciar sesión</h1>
        <label for="inputId_user">Correo electrónico: </label>
        <input type="text" value="{{ last_username }}" name="id_user" id="inputId_user" class="form-control mb-3" autocomplete="username" required autofocus>
        <label for="inputPassword">Contraseña: </label>
        <input type="password" name="password" id="inputPassword" class="form-control mb-3" autocomplete="current-password" required>

        <input type="hidden" name="_csrf_token"
            value="{{ csrf_token('authenticate') }}"
        >

        {#
            Uncomment this section and add a remember_me option below your firewall to activate remember me functionality.
            See https://symfony.com/doc/current/security/remember_me.html

            <div class="checkbox mb-3">
                <label>
                    <input type="checkbox" name="_remember_me"> Remember me
                </label>
            </div>
        #}

        <button class="btn btn-lg btn-primary col-lg-6 mb-3" type="submit">
            Iniciar sesión
        </button>
    </form>
</div>
{% endblock %}

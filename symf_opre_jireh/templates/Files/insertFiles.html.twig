{% extends 'layout.html.twig' %}
    {% block content %}
    <section class="content">
 <div class="container">
	
	
  	<a class="btn btn-primary" href="/twig/detailUser/{{user.getId()}}">⇦</a>
    <h1>Nuevo fichero para <strong> {{ user.getName() }} {{ user.getSurnames() }} </strong></h1>

      <form method="post" action="" class="row ms-3">
       	<article class="eventList">
          <label class="form-label mt-3" for="name"> Nombre del fichero: </label>
           <div class="mb-3 col-lg-8">
						<input class="form-control" name="name" type="text" value="">
	    		</div>

           <label class="form-label mt-3" for="type"> tipo del fichero (eg. documentación): </label>
          <div class="mb-3 col-lg-8">
      			<input class="form-control" name="type" type="text" value="">
				  </div>
          <div class="mb-3 col-lg-8">
          <input type="checkbox" class="form-check-input" id="exampleCheck1" name="isSubmited">
          <label class="form-check-label" for="exampleCheck1">El fichero ha sido entregado por el usuario?</label>
        </div>
        <div >	
          <button type="submit" class="btn btn-primary">Crear</button>
        </div>
       </article>
      </form>
  </div>
  </section>
{% endblock %}

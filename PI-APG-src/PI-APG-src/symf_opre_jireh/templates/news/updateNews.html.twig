{% extends 'layout.html.twig' %}
    {% block content %}
       
  <section id="content">
    <div class="container">
	
		
	<a class="btn btn-primary" href="/twig/news/">⇦</a>
	<h1>Actualizar noticia {{ task.getTitulo() }}</h1>
					<form method="post" action="" class="row" enctype="multipart/form-data">
					<article class="eventList">
					<label class="form-label" for="titulo"> Título: </label>
					<div class="mb-3 col-lg-8">
						<input class="form-control" name="titulo" type="text" value="{{ task.getTitulo() }}">
					</div>
					<label class="form-label" for="texto"> Texto: </label>
					<div class="mb-3 col-lg-8">
						<textarea name="texto" class="form-control">{{ task.getTexto() }}</textarea>
					</div>

					<div class="col-lg-12">
						<button type="submit" class="btn btn-primary mb-3 col-lg-3">Actualizar</button>
					</div>
					</article>             
			</div>
      </div>
    </div>
  </section>

{% endblock %}